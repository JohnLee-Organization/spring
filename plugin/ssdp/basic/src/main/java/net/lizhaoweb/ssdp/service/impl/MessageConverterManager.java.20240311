package net.lizhaoweb.ssdp.service.impl;

import lombok.AccessLevel;
import lombok.NoArgsConstructor;
import net.lizhaoweb.ssdp.config.SsdpConfiguration;

/**
 * 消息转换器管理器
 * <p>
 * Created by Jhon.Lee on 3/8/2024 17:17
 *
 * @author <a href="http://www.lizhaoweb.cn">李召(John.Lee)</a>
 * @version 1.0.0.0.1
 * @email 404644381@qq.com
 */
@NoArgsConstructor(access = AccessLevel.PRIVATE)
public class MessageConverterManager {

    private static RequestMessageConverter requestMessageConverter;
    private static ResponseMessageConverter responseMessageConverter;

    public static final void setRequestMessageConverter(SsdpConfiguration config) {
        if (requestMessageConverter == null) {
            requestMessageConverter = new RequestMessageConverter(config);
        }
    }

    public static final RequestMessageConverter getRequestMessageConverter() {
        return requestMessageConverter;
    }

    public static final void setResponseMessageConverter(SsdpConfiguration config) {
        if (responseMessageConverter == null) {
            responseMessageConverter = new ResponseMessageConverter(config);
        }
    }

    public static final ResponseMessageConverter getResponseMessageConverter() {
        return responseMessageConverter;
    }
}
